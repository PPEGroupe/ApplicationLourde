<Window x:Class="MegaCasting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCasting"
        mc:Ignorable="d"
        Title="Client | MegaCasting" Height="500" Width="700" MinHeight="500" MinWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Margin="10,0,10,0" Source="header.png"/>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Client" MinWidth="150" Height="30">
                <DockPanel>
                    <DataGrid DockPanel.Dock="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn  MinWidth="100" Header="Société"/>
                            <DataGridTextColumn  MinWidth="100" Header="Site" />
                            <DataGridTextColumn  MinWidth="100" Header="E-mail" />
                            <DataGridTextColumn  MinWidth="100" Header="Téléphone" />
                            <DataGridTextColumn  MinWidth="100" Header="Fax" />
                            <DataGridTextColumn  MinWidth="100" Header="Adresse" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Ajouter" Click="ButtonAddClient_Click"/>
                        <Button Grid.Column="1" Content="Modifier" Click="ButtonUpdateClient_Click"/>
                        <Button Grid.Column="2" Content="Supprimer" Click="ButtonDeleteClient_Click"/>
                    </Grid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Offre" MinWidth="150" Height="30">
                
            </TabItem>
        </TabControl>

        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">Copyright ©2015 par MégaProduction. Tous droits réservés</TextBlock>
    </Grid>
</Window>
