<Window x:Class="MegaCasting.OfferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCasting"
        mc:Ignorable="d"
        Title="OfferWindow" MinHeight="550" MinWidth="400" MaxHeight="550" MaxWidth="400">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelForTextBox}">Société :</Label>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="CompanyTextBox" Text="{Binding Path=Offer.Client.Company, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelForTextBox}">Domaine de métier :</Label>
        <ComboBox Grid.Column="1" Grid.Row="1" x:Name="JobDomainComboBox" ItemsSource="{Binding Path=JobDomains}"  SelectedItem="{Binding Offer.Job.JobDomain}" DisplayMemberPath="Label" />

        <Label Grid.Column="0" Grid.Row="2" Style="{StaticResource LabelForTextBox}">Métier :</Label>
        <ComboBox Grid.Column="1" Grid.Row="2" x:Name="JobComboBox" ItemsSource="{Binding Path=Jobs}"  SelectedItem="{Binding Offer.Job}" DisplayMemberPath="Label" />

        <Label Grid.Column="0" Grid.Row="3" Style="{StaticResource LabelForTextBox}">N° Offre :</Label>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="ReferenceTextBox" Text="{Binding Path=Offer.Reference, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="4" Style="{StaticResource LabelForTextBox}">Nom de l'offre :</Label>
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="TitleTextBox" Text="{Binding Path=Offer.Title, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="5" Style="{StaticResource LabelForTextBox}">Date de début :</Label>
        <DatePicker Grid.Column="1" Grid.Row="5" x:Name="DateStartPublicationDatePicker" SelectedDate="{Binding Path=Offer.DateStartPublication, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="6" Style="{StaticResource LabelForTextBox}">Durée de l'offre :</Label>
        <TextBox Grid.Column="1" Grid.Row="6" x:Name="PublicationDurationTextBox" Text="{Binding Path=Offer.PublicationDuration, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="7" Style="{StaticResource LabelForTextBox}">Date de début du contrat :</Label>
        <DatePicker Grid.Column="1" Grid.Row="7" x:Name="DateStartContractDatePicker" SelectedDate="{Binding Path=Offer.DateStartContract, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="8" Style="{StaticResource LabelForTextBox}">Nombre de postes :</Label>
        <TextBox Grid.Column="1" Grid.Row="8" x:Name="JobQuantityTextBox" Text="{Binding Path=Offer.JobQuantity, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="9" Style="{StaticResource LabelForTextBox}">Description de l'offre :</Label>
        <TextBox Grid.Column="1" Grid.Row="9" x:Name="JobDescriptionTextBox" Text="{Binding Path=Offer.JobDescription, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="10" Style="{StaticResource LabelForTextBox}">Adresse :</Label>
        <TextBox Grid.Column="1" Grid.Row="10" x:Name="AddressTextBox" Text="{Binding Path=Offer.Address, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="11" Style="{StaticResource LabelForTextBox}">Ville :</Label>
        <TextBox Grid.Column="1" Grid.Row="11" x:Name="CityTextBox" Text="{Binding Path=Offer.City, UpdateSourceTrigger=Explicit}" />

        <Label Grid.Column="0" Grid.Row="12" Style="{StaticResource LabelForTextBox}">Code postal :</Label>
        <TextBox Grid.Column="1" Grid.Row="12" x:Name="ZipCodeTextBox" Text="{Binding Path=Offer.ZipCode, UpdateSourceTrigger=Explicit}" />

        <StackPanel Grid.ColumnSpan="2" Grid.Row="13" Style="{StaticResource StackPanelForButtons}">
            <Button Click="ButtonCancel_Click">Annuler</Button>
            <Button Click="ButtonValidate_Click">Valider</Button>
        </StackPanel>
    </Grid>
</Window>
