<Window x:Class="MegaCasting.OfferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCasting"
        mc:Ignorable="d"
        Title="OfferWindow" MinHeight="400" MinWidth="300" MaxHeight="420" MaxWidth="400">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Société :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="0" x:Name="CompanyTextBox" Text="{Binding Path=Company, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="1" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">N°Offre :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="ReferenceTextBox" Text="{Binding Path=Reference, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="2" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Nom de l'Offre :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="2" x:Name="TitleTextBox" Text="{Binding Path=Title, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="3" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Date de Début :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="3" x:Name="DateStartPublicationTextBox" Text="{Binding Path=DateStartPublication, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="4" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Durrée de l'Offre :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="4" x:Name="PublicationDurationTextBox" Text="{Binding Path=PublicationDuration, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="5" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Date de Début du Contrat :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="5" x:Name="DateStartContractTextBox" Text="{Binding Path=DateStartContract, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="6" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Nombre de Postes :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="6" x:Name="JobQuantityTextBox" Text="{Binding Path=JobQuantity, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="7" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Description de l'Offre :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="7" x:Name="JobDescriptionTextBox" Text="{Binding Path=JobDescription, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="8" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Adresse :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="8" x:Name="AddressTextBox" Text="{Binding Path=Address, UpdateSourceTrigger=Explicit}" />
            
            <Border Grid.Column="0" Grid.Row="9" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">Ville :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="9" x:Name="CityTextBox" Text="{Binding Path=City, UpdateSourceTrigger=Explicit}" />

            <Border Grid.Column="0" Grid.Row="10" CornerRadius="8" Style="{StaticResource BorderForTextBox}">
                <Label Style="{StaticResource LabelForTextBox}">CP :</Label>
            </Border>
            <TextBox Grid.Column="1" Grid.Row="10" x:Name="ZipCodeTextBox" Text="{Binding Path=ZipCode, UpdateSourceTrigger=Explicit}" />

            <StackPanel Grid.ColumnSpan="2" Grid.Row="11" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,0,0,0">
                <Button Click="ButtonCancel_Click">Annuler</Button>
                <Button Click="ButtonValidate_Click">Valider</Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
