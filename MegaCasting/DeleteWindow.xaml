<Window x:Class="MegaCasting.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCasting"
        mc:Ignorable="d"
        Title="Demande de suppression" MinHeight="180" MinWidth="400" MaxHeight="180" MaxWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding Description}"/>

        <StackPanel Grid.Row="1" Style="{StaticResource StackPanelForButtons}">
            <Button Content="Annuler" Click="ButtonCancel_Click"/>
            <Button Content="Valider" Click="ButtonValidate_Click"/>
        </StackPanel>
    </Grid>
</Window>
