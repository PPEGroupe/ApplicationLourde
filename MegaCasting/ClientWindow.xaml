<Window x:Class="MegaCasting.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion client" Height="320" Width="400">
    <Grid>
        
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Label  Grid.Column="0" Grid.Row="0" Style="{StaticResource LabelForTextBox}">Société :</Label>
            <Label  Grid.Column="0" Grid.Row="1" Style="{StaticResource LabelForTextBox}">Site Internet :</Label>
            <Label  Grid.Column="0" Grid.Row="2" Style="{StaticResource LabelForTextBox}">E-mail :</Label>
            <Label  Grid.Column="0" Grid.Row="3" Style="{StaticResource LabelForTextBox}">Téléphone :</Label>
            <Label  Grid.Column="0" Grid.Row="4" Style="{StaticResource LabelForTextBox}">Fax :</Label>
            <Label  Grid.Column="0" Grid.Row="5" Style="{StaticResource LabelForTextBox}">Adresse :</Label>
            <Button Grid.Column="0" Grid.Row="6" Click="ButtonCancel_Click">Annuler</Button>
        </Grid>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <TextBox Grid.Column="1" Grid.Row="0" Text="" />
            <TextBox Grid.Column="1" Grid.Row="1" Text="" />
            <TextBox Grid.Column="1" Grid.Row="2" Text="" />
            <TextBox Grid.Column="1" Grid.Row="3" Text="" />
            <TextBox Grid.Column="1" Grid.Row="4" Text="" />
            <TextBox Grid.Column="1" Grid.Row="5" Text="" />
            <Button Grid.Column="0" Grid.Row="6" Click="ButtonValidate_Click">Valide</Button>
        </Grid>
    </Grid>
</Window>

    